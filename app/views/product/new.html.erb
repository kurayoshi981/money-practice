<div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h3 class="card-title text-center">投稿</h3>
            <%= form_with model: @product, url: { action: :create } do |f| %>
            
            <div class="form-group">
              <%= f.label :名前 %>
              <%= f.text_field :name, autofocus: true , class: "form-control", placeholder: "名前を入力してください" %>
            </div>
            <div class="form-group">
                <%= f.label :内容 %>
                <%= f.text_area :description, autofocus: true , class: "form-control", placeholder: "内容を入力してください" %>
            </div>
            <div class="form-group">
                <%= f.label :価格 %>
                <%= f.number_field :price, autofocus: true , class: "form-control", placeholder: "値段を入力してください" %>
            </div>
            <div class="form-group">
                <%= f.label :在庫数 %>
                <%= f.number_field :stock, autofocus: true , class: "form-control", placeholder: "名前を入力してください" %>
            </div>
            <div class="text-center">
              <%= f.submit "投稿", class: "btn btn-primary" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>